/* css reset css初始化代码 */
body {margin:0; padding:0; font:12px/1.5 "微软雅黑",\5b8b\4f53,Arial,sans-serif; color: #3b3b3b;}
div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,blockquote,p{padding:0; margin:0;}
table,td,tr,th{font-size:12px;}
ol,ul {list-style:none;}
li{list-style-type:none;}
img{vertical-align:top;border:0;}
h1,h2,h3,h4,h5,h6{font-size:inherit; font-weight:normal;}
address,cite,code,em,th,i{font-weight:normal; font-style:normal;}
.clearfix{*zoom:1;}
.clearfix:after{display:block; overflow:hidden; clear:both; height:0; visibility:hidden; content:".";}
a {color:#252525; text-decoration:none;}
a:visited {text-decoration:none;}
a:hover {color:#ba2636;text-decoration:underline;}
a:active {color:#ba2636;}


/* 返回顶部开始 */
.backTop {
    width: 40px;
    height: 40px;
    background: url(images/top_03.jpg) no-repeat;
    position: fixed;
    bottom: 100px;
    right:30px;
}
/* 顶部开始 */
.top {
    height: 40px;
    background-color: #333;
}
.w {  /* 公共类  页面中很多的宽度是1000 居中对齐 */
    width: 1000px;  /* 页面版心 1000像素 */
    margin: 0 auto;
}

.top-content {
    height: 40px;
    line-height: 40px;
    color: #fff;
}
.wecome {
    float: left;
    margin-left: 5px;
}
.login {
    float: right;
    margin-right: 5px;
}
.login a {
    color: #fff;
    margin: 0 10px;
}
/* 顶部结束 */

.header {
    height: 100px;
    overflow: hidden;  /* 消除外边距合并的问题 塌陷 */
}

.logo {
    width: 303px;
    height: 82px;
    background: url(images/logo.png)  no-repeat;
    margin: 9px 0 0 9px;
    float: left;
}
.nav {
    float: right;
    margin-top: 28px;
}
.nav li {
    float: left;
    margin: 0 20px;
}
.nav li a {
    color: #3b3b3b;
    font-family: "微软雅黑";
    display: block;
    height: 32px;   
    line-height: 32px;
    text-decoration: none;
}
.nav .current {
    color: #9dcb2a;
    border-bottom: 3px solid  #9dcb2a;
}

/* header部分结束 */

/* banner begin  */
.banner {
    height: 600px;
    background: url(images/banner.jpg) no-repeat top center;
}
/* banner end */

/* info模块开始啦 */
.info {
    background-color: #f2f2f2;
}
.info-cotent {
    height: 268px;
    padding-top: 22px;

}

.info-cotent li {
    width: 243px;
    height: 238px;
    float: left;
    border-left: 1px solid #fff;
    border-right: 1px solid #ddd;
}
.info-cotent li div {
    margin-top: 8px;
    text-align: center;
}
.info-cotent li h4 {
    height: 50px;
    line-height: 50px;
    font-size: 20px;
    text-align: center;
    font-family: "微软雅黑";

}
.info-cotent li p {
    margin: 0 18px;
    text-indent: 1em;  /* 首行缩进一个字 */
}
.info-cotent .info01 {
    border-left: 0;
}

/* info模块结束啦 */

/* hotline begin */
.hotline {
    height: 117px;
    background-color: #e1e1e1;
    text-align: center;
    overflow: hidden;
}
.hotline h3 {
    margin-top:30px;
    height: 40px;
    font-size: 25px;
    font-family: "微软雅黑";
}
.hotline p {
    font-size:16px;
    color: #515150;
}
/* hotline end */

/* 下载模块begin */

.download {
    height: 684px;
    background-color: #69ae5b;
}
.download-con {
    position: relative;
}
.download a {
    position: absolute;
    width: 342px;
    height: 80px;
    top: 190px;
    right: 111px;
}

/* 下载模块end */

/* main begin */
.main {
    height: 446px;
    padding: 24px 15px 0;
    width: 970px;
}
.news-t {
    text-align: center;
    margin-bottom: 15px;
}
.news-m dl {
    float: left;
}
.first-dl {
    margin-right: 30px;
}
.news-m dt {
    float: left;
}
.news-m dd {
    float: left;
    width: 290px;
    margin-left: 6px;

}

.news-m dd h4 {
    font-size: 16px;
}

.news-m dd p {
    line-height: 30px;
}
.news-b {
    margin-top: 35px;
}
.news-b ul {
    float: left;
}
.first-ul {
    margin-right: 40px;
}
.news-b li {
    width: 448px;
    height: 35px;
    background: url(images/square.jpg) no-repeat left center;
    line-height: 35px;
    padding-left:10px;
}

.news-b li a {
    float: left;
}
.news-b li span {
    float: right;
}

/* main end */

/* footer begin */
.footer {
    background-color: #333;
    color: #e0e0e0;
}
.footer-content {
    height: 268px;
    padding: 42px 0 0 50px;
    width: 950px;
}

.contact {
    height: 180px;
}
.message {
    float: left;
}
.message h4,.us h4 {
    height: 26px;
    line-height: 26px;
    padding-left: 30px;
    background: url(images/mail.jpg) no-repeat left center;
}
.message textarea {
    width: 564px;
    height: 84px;
    background-color: #1d2026;
    border: 1px solid #3b3b43;
    resize: none;
    outline: 0;
    color: #5d5d5d;
    padding: 12px;
    vertical-align: top;
}
.message button {
    width: 36px;
    height: 110px;
    vertical-align: top;
    background: url(images/btn_03.jpg) no-repeat;
    border: 0;
}
.us {
    float: left;
    margin-left: 30px;
}
.us h4 {
    background-image: url(images/man_03.jpg);
}
.us p {
    line-height: 25px;
    margin-top: 5px;
}
.subnav {
    text-align: center;
    line-height: 35px;
}
.subnav a {
    margin: 0 15px;
     color: #e0e0e0;
}
